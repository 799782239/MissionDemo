<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp">

    <TextView
        android:id="@+id/mymission_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="26dp"
        android:background="@color/colorLightBlue"
        android:text="@string/mymission_accept" />

    <android.support.v7.widget.CardView
        android:id="@+id/mymission_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:elevation="2dp"
        app:cardCornerRadius="10dp"
        app:contentPadding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp">

            <TextView
                android:id="@+id/mymission_item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="asdadawdasdasdddddddddddddddddddddwdasdawdasdasdawdasdaw" />

            <ImageView
                android:id="@+id/mymission_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_below="@+id/mymission_item_content"
                android:layout_marginTop="16dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/mymission_note"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/mymission_image"
                android:layout_marginTop="8dp"
                android:layout_toLeftOf="@+id/mymission_publisher"
                android:text="@string/mymission_note" />

            <TextView
                android:id="@+id/mymission_publisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/mymission_note"
                android:text="jiafei|22分钟前" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/mymission_touxiang"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignLeft="@+id/mymission_cardview"
        android:layout_alignTop="@+id/mymission_cardview"
        android:layout_marginLeft="-16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/touxiang"
        android:elevation="3dp" />


</RelativeLayout>